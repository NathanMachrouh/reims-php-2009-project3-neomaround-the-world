        maxZoom: 18,
        id: 'mapbox/streets-v11',
        tileSize: 512,
        zoomOffset: -1,
        accessToken: 'pk.eyJ1IjoiYWRlbGluZWI1MSIsImEiOiJja2loOWdlcmswNWNnMnptd2Jvb3l6MDA3In0.XbM3nj9P9Gd0daPf7tt4sg'
        }).addTo(mymap);

        var marker = L.marker([49.23840602490704, 4.003347257434664]).addTo(mymap);

        var circle = L.circle([49.25, 4.0333], {
        color: 'red',
        fillColor: '#f03',
        fillOpacity: 0.5,
        radius: 3000
        }).addTo(mymap);

        marker.bindPopup("<b>Neoma BS Reims</b><br>Bienvenue!").openPopup();

        circle.bindPopup("Welcome to Reims city");
    </script>
</body>

