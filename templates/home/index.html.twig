    <div id="mapid"></div>

    <script type="text/javascript">
        var mymap = L.map('mapid').setView([49.25, 4.0333], 13);
      
        L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
