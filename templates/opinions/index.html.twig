{% extends 'base.html.twig' %}

{% block title %}Opinion{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 62%; font: 18px/1.5 sans-serif;}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

</style>

<div class="example-wrapper">
    <h1>All Opinions</h1>
</div>

    <ul>
    {% for opinion in opinions %}
        <li><a id="opinion" href="{{ path("opinion_show", { id: opinion.id }) }}"> {{ opinion.name }}</li>
    {% endfor %}    
    </ul>
   
    <a href="{{ path('home') }}">
        Back to map
    </a>

{% endblock %}