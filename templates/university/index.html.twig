{% extends 'base.html.twig' %}

{% block title %}All universities{% endblock %}

{% block body %}
    <h1>All universities</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Street</th>
                <th>City</th>
                <th>PostalCode</th>
                <th>ReferentMail</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for university in universities %}
            <tr>
                <td>{{ university.id }}</td>
                <td>{{ university.name }}</td>
                <td>{{ university.image }}</td>
                <td>{{ university.street }}</td>
                <td>{{ university.city }}</td>
                <td>{{ university.postalCode }}</td>
                <td>{{ university.referentMail }}</td>
                <td>{{ university.description }}</td>
                <td>
                    <a href="{{ path('university_show', {'id': university.id}) }}">show</a>
                    <a href="{{ path('university_edit', {'id': university.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">No university found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('university_new') }}">Create new</a>
    <a href="{{ path('home') }}">Home</a>
{% endblock %}
